/* pages/month/month.wxss */
/* pages/calendar/calendar.wxss */
page {
  position: fixed;
  height: 100%;
  width: 100%;
  background: #ffffff;
}
.calendar-page {
  width: 100%;
  height: 100%;
  padding: 30rpx;
  box-sizing: border-box;
  position: absolute;
  top: 2%;
}
.calendar {
  border-radius: 30rpx;
  background: #ffffff;
  box-shadow:0rpx 24rpx 38rpx rgba(105, 60, 209, 0.09);
  box-sizing: border-box;
  padding: 30rpx;
}
.btn-row {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  display: flex;
  margin-inline: -80rpx;
  justify-content: space-between;
  align-items: center;
  padding: 0 90rpx;
  
}
.btn-row text {
  display: inline-block;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  padding: 10rpx 12rpx;
  border-radius: 10rpx;
  border: 1rpx solid #8B7FF5;
  color: #8B7FF5;
  
}
.week-row {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  opacity: 1;
  border-radius: 11px;
  background: rgba(255, 241, 227, 1);

}
.week-item {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #000000;
  margin-top: 5px;
  margin-bottom: 5px;
}
.day-row {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 25rpx;
}
.day-item {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #000000;
  border-radius: 50%;
  box-sizing: border-box;
}
.day-today {
  background: #8B7FF5;
  color: #fff;
}
.day-otherMonth {
  color: #cdcdcd;
}
.legend{
  position: absolute;
  top:800rpx;
  width: 100%;
  display: flex;
  margin-left: -20px;
  justify-content: space-around;
}
.pink,.green,.red{
  width: 20px;
  height: 20px;
  opacity: 1;
}
.f_text,.p_text,.c_text{
  position: absolute;
  margin-left: 5px;
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 1px;
  color: rgba(0, 0, 0, 1);

} 
.jump1{  
  width: 20px;
  height: 20px;
  opacity: 1; 
}
 
.jump[plain]{
  border:none;
  padding: 0;
  position: absolute;
  top:740rpx;
  right: -60px;
}
.already{
  position:absolute;
  right:-70px;
  top: 880rpx;
  width: 200px;
  height: 14px;
  opacity: 1;
  font-size: 10.45px;
  font-weight: 700;
  letter-spacing: 0px;
  line-height: 13.07px;
  color: rgba(137, 150, 159, 1);
  text-align: left;
  vertical-align: top;

}



